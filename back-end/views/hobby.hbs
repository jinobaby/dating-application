<body class="membership-body">
  <div class="form-container-image">

    <img style="width: 100%; height: 100%; border-radius: 38px" src='/images/dating-page1.jpg' alt="Background Image">

  </div>

  <div class="form-container">
    <div class="header-area">
      <img class="form-logo" style="height: 50px; width: 50px;" src='/images/j-svg.svg' alt="Logo">
    </div>

    <header class="form-header">
      <h1 style="font-size: 38px; color: #f9f9f9" class="form-subtitle">{{#if name}}{{name}}, {{/if}} choose 5 things you're really into.</h1>
      <a style="font-size: 20px;" class="form-title">Proud foodie or big on bouldering? Add interests to your profilr to help you match with people who love them too.</a>
    </header>
    
    {{!-- filepath: d:\PROJECTS\budgetwise\back-end\views\hobby.hbs --}}
    <form class="membership-form" action="/hobby" method="POST">
      <div class="form-group" style="gap: 15px;">
        <div style="margin-bottom: 20px;">
          <input
            type="text"
            class="form-search"
            id="hobby-search"
            placeholder="What are you into?"
            style="width: 100%; font-size: 20px; border-radius: 38px; padding: 16px 24px; margin-bottom: 10px;"
            autocomplete="off"
            name="search"
          />
          <div style="font-weight: 700; color: #fff; font-size: 22px; margin-bottom: 12px; margin-top: 10px;">
            You might like...
          </div>
        </div>
        <div id="hobby-chips-container" class="hobby-chips-container" style="display: flex; flex-wrap: wrap; gap: 12px;">
          {{#each popularHobbies}}
            <label class="hobby-chip">
              <input type="checkbox" name="hobbies" value="{{this}}" style="display: none;" />
              <span style="margin-right: 8px;">{{lookup ../hobbyEmojis @index}}</span> {{this}}
            </label>
          {{/each}}
        </div>
        <div id="search-results" class="hobby-chips-container" style="display: flex; flex-wrap: wrap; gap: 12px; margin-top: 10px;"></div>
        <div style="margin-top: 18px; color: #bbb; font-size: 15px;">
          Choose up to 5 interests.
        </div>
      </div>
      <button style="margin-bottom: 10px;" class="submit-button white-btn">Proceed â†’</button>
    </form>
  </div>

</body>

<script src='/javascripts/hobby.js'></script>
<script>
  window.moreHobbies = {{{moreHobbies}}};
</script>
